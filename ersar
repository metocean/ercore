#!/usr/bin/env python
#This is driver script for ERSAR, for surface drifting objects
import optparse
from ercore import ERcore
from ercore.materials import Drifter

parser=optparse.OptionParser
usage = """

Usage: %prog [options] yaml_file tstart tend

tstart and tend can be:
 - datetime
 - ncep decimal time
 - string (%Y%m%d_%Hz or '%Y-%m-%d %H:%M:%S')

"""

parser = OptionParser(usage)

parser.add_option("-d", "--dt", dest="dt",help="Time step (seconds)",default=10)

(options, args) = parser.parse_args()

if len(args)<3:
